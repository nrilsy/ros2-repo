<?xml version="1.0"?>


<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="base_footprint" />

    <link name="arm_base_link">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.02" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.1 0.02" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="orange" />
        </collision>
        <xacro:box_inertia m="0.5" l="0.1" w="0.1" h="0.02"
                           xyz="0 0 0" rpy="0 0 0" />
    </link>

    <link name="forearm_link">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.3" />
            </geometry>
            <origin xyz="0 0 0.15" rpy="0 0 0" />
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.3" />
            </geometry>
            <origin xyz="0 0 0.15" rpy="0 0 0" />
            <material name="orange" />
        </collision>
        <xacro:cylinder_inertia m="0.3" r="0.02" l="0.3"
                           xyz="0 0 0" rpy="0 0 0" />
    </link>

    <joint name="arm_base_link_base_footprint_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="arm_base_link" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <joint name="forearm_base_joint" type="revolute">
        <parent link="arm_base_link" />
        <child link="forearm_link" />
        <origin xyz="0 0 1" rpy="0 0 0"/>
        <axis xyz="1 0 0" />
        <limit lower="${-pi/2}" upper="${pi/2}" effort="10" velocity="10" />
    </joint>



</robot>